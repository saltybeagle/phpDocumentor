<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<command>
    <description>generate api documentation from PHP source files.</description>
    <version>1.0.0</version>
    <option name="target">
        <short_name>-o</short_name>
        <long_name>--target</long_name>
        <description>directory to save output in</description>
        <action>StoreString</action>
    </option>
    <option name="ignore">
        <short_name>-i</short_name>
        <long_name>--ignore</long_name>
        <description>directories to ignore (one call per directory)</description>
        <action>StoreArray</action>
    </option>
    <option name="verbose">
        <short_name>-v</short_name>
        <long_name>--verbose</long_name>
        <description>turn on verbose output</description>
        <action>StoreTrue</action>
    </option>
    <option name="followSymlinks">
        <long_name>--follow-symlinks</long_name>
        <description>Follow Symlinks</description>
        <action>StoreTrue</action>
    </option>
    <option name="title">
		<short_name>-t</short_name>
    	<long_name>--title</long_name>
    	<action>StoreTrue</action>
    </option>
    <argument name="sourceFolder">
        <description>path to the source that you wish to generate documentation for</description>
    </argument>
</command>
